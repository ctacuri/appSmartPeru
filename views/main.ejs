<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">

    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title><%=title %></title>

    <script type="text/javascript" src="javascripts/scripts.js"></script>
</head>
<body>

    <% include menu %>

    <br><br><br>

    <div class="container-fluid">

        <!-- Main component for a primary marketing message or call to action -->
        <div class="jumbotron">

            <div class="row">
                <div class="col-md-8 nopadding">
                    <div id="chartIngresosGastos"></div>
                </div>

                <div class="col-md-4 nopadding">
                    <div id="gridBancos"></div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-9">
                    <div id="gridIngresos"></div>
                </div>
                <div class="col-md-3">
                    <div class="centerVertical">
                        <h2><span>S/.</span> 1,000,000.00</h2>
                    </div>
                </div>

                <div class="col-md-9">
                    <div id="gridGastos"></div>
                </div>
                <div class="col-md-3">
                    <div class="centerVertical">
                        <h2><span>S/.</span> 0.00</h2>
                    </div>
                </div>
            </div>

        </div>

    </div> <!-- /container -->


<script type="text/javascript" src="/javascripts/scripts_highcharts.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        var optionsChartIngresosGastos, chartIngresosGastos;

        optionsChartIngresosGastos = {
            chart: {
                type: 'line',
                renderTo: 'chartIngresosGastos',
                height: 320
            },
            title: {
                text: 'Ingresos/Gastos'
            },
            subtitle: {
                text: null
            },
            exporting: {
                enabled: false
            },
            credits: {
                enabled: false
            },
            xAxis: {
                categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
            },
            yAxis: {
                title: {
                    text: null
                }
            },
            plotOptions: {
                line: {
                    dataLabels: {
                        enabled: true
                    },
                    enableMouseTracking: false
                }
            },
            series: [{
                name: 'Tokyo',
                data: [7.0, 6.9, 9.5, 14.5, 18.4, 21.5, 25.2, 26.5, 23.3, 18.3, 13.9, 9.6]
            }, {
                name: 'London',
                data: [3.9, 4.2, 5.7, 8.5, 11.9, 15.2, 17.0, 16.6, 14.2, 10.3, 6.6, 4.8]
            }]
        };

        chartIngresosGastos = new Highcharts.Chart(optionsChartIngresosGastos);


        $("#gridBancos").jqxGrid(
        {
            width: '100%',
            height: 320,
            //source: dataAdapter,
            pageable: false,
            autoheight: false,
            sortable: true,
            altrows: true,
            enabletooltips: true,
            editable: true,
            selectionmode: 'multiplecellsadvanced',
            columns: [
                { text: 'Nombre de la cuenta', columngroup: 'Details', datafield: 'cuenta', align: 'center', cellsalign: 'left', width: '70%' },
                { text: 'Saldo', columngroup: 'Details', datafield: 'saldo', align: 'center', cellsalign: 'right', cellsformat: 'd2', width: '30%' }
            ],
            columngroups: [
                { text: 'Bancos', align: 'center', name: 'Details' }
            ]
        });

        $("#gridIngresos").jqxGrid(
        {
            width: '100%',
            height: 320,
            //source: dataAdapter,
            pageable: false,
            autoheight: false,
            sortable: true,
            altrows: true,
            enabletooltips: true,
            editable: true,
            selectionmode: 'multiplecellsadvanced',
            columns: [
                { text: 'Fecha', columngroup: 'Details', datafield: 'fecha', align: 'center', cellsalign: 'left', width: '15%' },
                { text: 'Detalle', columngroup: 'Details', datafield: 'detalle', align: 'center', cellsalign: 'left', width: '70%' },
                { text: 'Monto', columngroup: 'Details', datafield: 'monto', align: 'center', cellsalign: 'right', cellsformat: 'd2', width: '15%' }
            ],
            columngroups: [
                { text: 'Ingresos', align: 'center', name: 'Details' }
            ]
        });

        $("#gridGastos").jqxGrid(
        {
            width: '100%',
            height: 320,
            //source: dataAdapter,
            pageable: false,
            autoheight: false,
            sortable: true,
            altrows: true,
            enabletooltips: true,
            editable: true,
            selectionmode: 'multiplecellsadvanced',
            columns: [
                { text: 'Fecha', columngroup: 'Details', datafield: 'fecha', align: 'center', cellsalign: 'left', width: '15%' },
                { text: 'Detalle', columngroup: 'Details', datafield: 'detalle', align: 'center', cellsalign: 'left', width: '70%' },
                { text: 'Monto', columngroup: 'Details', datafield: 'monto', align: 'center', cellsalign: 'right', cellsformat: 'd2', width: '15%' }
            ],
            columngroups: [
                { text: 'Gastos', align: 'center', name: 'Details' }
            ]
        });

    });
</script>
</body>
</html>